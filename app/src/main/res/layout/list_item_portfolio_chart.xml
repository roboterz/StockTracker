<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="45dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="持有资产"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/toggle_group_asset_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_holdings_detail"
            style="@style/Widget.App.Button.OutlinedButton.Normal"
            android:text="持仓明细"
            android:textColor="@color/asset_toggle_text_color"
            app:backgroundTint="@color/asset_toggle_bg_color" />

        <Button
            android:id="@+id/button_closed_positions_detail"
            style="@style/Widget.App.Button.OutlinedButton.Normal"
            android:layout_marginStart="8dp"
            android:text="平仓明细"
            android:textColor="@color/asset_toggle_text_color"
            app:backgroundTint="@color/asset_toggle_bg_color" />

        <Button
            android:id="@+id/button_cash_detail"
            style="@style/Widget.App.Button.OutlinedButton.Normal"
            android:layout_marginStart="8dp"
            android:text="现金明细"
            android:textColor="@color/asset_toggle_text_color"
            app:backgroundTint="@color/asset_toggle_bg_color" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.example.stocktracker.ui.components.DonutChartView
            android:id="@+id/donut_chart"
            android:layout_width="150dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:id="@+id/legend_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:orientation="vertical" />

    </LinearLayout>

    <!-- Stock list header -->
    <include
        layout="@layout/list_item_stock_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="#22FFFFFF" />

</LinearLayout>

