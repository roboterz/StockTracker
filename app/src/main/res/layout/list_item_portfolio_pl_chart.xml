<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="盈亏金额"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggle_group_pl_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:checkedButton="@+id/button_pl_rate"
            app:singleSelection="true"
            app:strokeWidth="0dp">

            <Button
                android:id="@+id/button_pl_rate"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:backgroundTint="@color/pl_toggle_button_background_tint"
                android:insetLeft="0dp"
                android:insetRight="1dp"
                android:minWidth="0dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="总盈亏率"
                android:textColor="@color/pl_toggle_button_text_color"
                android:textSize="11sp" />

            <Button
                android:id="@+id/button_pl_amount"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:backgroundTint="@color/pl_toggle_button_background_tint"
                android:insetLeft="1dp"
                android:insetRight="0dp"
                android:minWidth="0dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="总盈亏"
                android:textColor="@color/pl_toggle_button_text_color"
                android:textSize="11sp" />
        </com.google.android.material.button.MaterialButtonToggleGroup>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/circle_background_legend"
            android:backgroundTint="@color/chartLineBlue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="总盈亏率"
            android:textColor="@android:color/white"
            android:textSize="11sp" />

        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/circle_background_legend"
            android:backgroundTint="@color/chartLineOrange" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="DJI"
            android:textColor="@android:color/white"
            android:textSize="11sp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.stocktracker.ui.components.LineChartView
            android:id="@+id/pl_line_chart"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/date_labels_container"/>

        <TextView
            android:id="@+id/pl_chart_percent_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/pl_line_chart"
            android:layout_marginTop="16dp"
            tools:text="+26.90%" />

        <TextView
            android:id="@+id/pl_chart_percent_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/pl_line_chart"
            app:layout_constraintBottom_toBottomOf="@id/pl_line_chart"
            tools:text="+0.47%" />

        <TextView
            android:id="@+id/pl_chart_percent_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/pl_line_chart"
            android:layout_marginBottom="16dp"
            tools:text="-25.96%" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/date_labels_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/pl_line_chart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/date_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/date_mid_left"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="2024-04" />

            <TextView
                android:id="@+id/date_mid_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp"
                android:visibility="invisible"
                app:layout_constraintStart_toEndOf="@+id/date_start"
                app:layout_constraintEnd_toStartOf="@+id/date_mid"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="2024-06"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/date_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@+id/date_mid_left"
                app:layout_constraintEnd_toStartOf="@+id/date_mid_right"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="2024-08" />

            <TextView
                android:id="@+id/date_mid_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp"
                android:visibility="invisible"
                app:layout_constraintStart_toEndOf="@+id/date_mid"
                app:layout_constraintEnd_toStartOf="@+id/date_end"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="2024-10"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/date_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@+id/date_mid_right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="2024-12" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/toggle_group_time_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_5d"
            style="@style/Widget.App.Button.OutlinedButton.ExtraSmall"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="5日"
            android:textColor="@color/toggle_button_text_color"
            app:backgroundTint="@color/toggle_button_background_tint" />
        <Button
            android:id="@+id/button_1m"
            style="@style/Widget.App.Button.OutlinedButton.ExtraSmall"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="1月"
            android:textColor="@color/toggle_button_text_color"
            app:backgroundTint="@color/toggle_button_background_tint" />
        <Button
            android:id="@+id/button_3m"
            style="@style/Widget.App.Button.OutlinedButton.ExtraSmall"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="3月"
            android:textColor="@color/toggle_button_text_color"
            app:backgroundTint="@color/toggle_button_background_tint" />
        <Button
            android:id="@+id/button_6m"
            style="@style/Widget.App.Button.OutlinedButton.ExtraSmall"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="6月"
            android:textColor="@color/toggle_button_text_color"
            app:backgroundTint="@color/toggle_button_background_tint" />
        <Button
            android:id="@+id/button_1y"
            style="@style/Widget.App.Button.OutlinedButton.ExtraSmall"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="1年"
            android:textColor="@color/toggle_button_text_color"
            app:backgroundTint="@color/toggle_button_background_tint" />
        <Button
            android:id="@+id/button_5y"
            style="@style/Widget.App.Button.OutlinedButton.ExtraSmall"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="5年"
            android:textColor="@color/toggle_button_text_color"
            app:backgroundTint="@color/toggle_button_background_tint" />
        <Button
            android:id="@+id/button_all"
            style="@style/Widget.App.Button.OutlinedButton.ExtraSmall"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="全部"
            android:textColor="@color/toggle_button_text_color"
            app:backgroundTint="@color/toggle_button_background_tint" />

    </LinearLayout>

</LinearLayout>

