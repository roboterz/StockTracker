<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--
      注意：您需要先下载 Noto Sans CJK 的 .ttf 字体文件，
      并将它们放置在 res/font/ 目录下。
    -->
    <font
        app:fontStyle="normal"
        app:fontWeight="400"
        app:font="@font/noto_sans_cjk_regular" />

    <font
        app:fontStyle="normal"
        app:fontWeight="700"
        app:font="@font/noto_sans_cjk_bold" />

</font-family>
